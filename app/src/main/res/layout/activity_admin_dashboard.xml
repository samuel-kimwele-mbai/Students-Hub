<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Add Events Functionality -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAddEvents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardViewAddResources"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAddEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Events" />
    </androidx.cardview.widget.CardView>

    <!-- Add Resources Functionality -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAddResources"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardViewAddEvents"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAddResources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Resources" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
